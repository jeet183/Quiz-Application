<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackgroundapp"
    tools:context=".NextScreen">

    <Button
        android:id="@+id/next2"
        android:layout_width="167dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/LightestBlue2"
        android:onClick="gotoHome"
        android:text="Next"
        android:textAppearance="@style/ThemeOverlay.AppCompat.Dark"
        android:textColor="@color/NavyBlue"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="350dp"
        android:layout_height="123dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Exciting game modes:"
        android:textColor="@color/NavyBlue"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/no1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:text="Practice"
        android:textColor="@color/NavyBlue"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/no2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="201dp"
        android:text="Head-To-Head"
        android:textColor="@color/NavyBlue"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/no2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="243dp"
        android:text="Online"
        android:textColor="@color/NavyBlue"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/no3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="168dp"
        android:text="LeaderBoards"
        android:textColor="@color/NavyBlue"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="65dp"
        android:layout_height="65dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="157dp"
        android:layout_toEndOf="@+id/next2"
        app:srcCompat="@drawable/leaderboard" />


    <ImageView
        android:id="@+id/image2"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="209dp"
        app:srcCompat="@drawable/headon" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/no2"
        android:layout_marginStart="133dp"
        app:srcCompat="@drawable/online" />





</RelativeLayout>